{
    "keydown": {
        "UP": {
            "callback": "player.changeMovement",
            "args": ["up", true]
        },
        "DOWN": {
            "callback": "player.changeMovement",
            "args": ["down", true]
        },
        "RIGHT": {
            "callback": "player.changeMovement",
            "args": ["right", true]
        },
        "LEFT": {
            "callback": "player.changeMovement",
            "args": ["left", true]
        },
        "ESC": {
            "callback": "game_state.pauseGame"
        }
    },
    "keyup": {
        "UP": {
            "callback": "player.changeMovement",
            "args": ["up", false]
        },
        "DOWN": {
            "callback": "player.changeMovement",
            "args": ["down", false]
        },
        "RIGHT": {
            "callback": "player.changeMovement",
            "args": ["right", false]
        },
        "LEFT": {
            "callback": "player.changeMovement",
            "args": ["left", false]
        }
    }
}
